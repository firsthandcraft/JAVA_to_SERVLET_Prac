package step1;

import java.util.Scanner;

public class signInSwitch2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//등록(아이디, 전화번호 이름 주소), 전체출력, 종료
				System.out.println("계산기 만들기");
				
				Scanner sc =new Scanner(System.in);
				//계산기 만들기
				
				boolean flag=true ;
				String i;
				String n;
				int j=0,k=0;
				

				
				while(flag) {
					System.out.println("+");
					System.out.println("-");
					System.out.println("*");
					System.out.println("/");
					System.out.println("종료");
					
					i =sc.next();
					
					switch (i) {
						case "+":
							System.out.println("숫자를 입력하세요 : ");
							j=sc.nextInt();
							System.out.println("숫자를 입력하세요 : ");
							k=sc.nextInt();
							System.out.println("부호를 입력하세요 : ");
							c=sc.next();
							
							break;
						 
						case "-":
							break;
						case "*":
							break;
						case "/":
							break;
						case "종료":
							flag=false;
							System.out.println("종료");
						 break;
						 
						default:
							System.out.println("오류 다시 입력");
					}//switch
					
					
					// 아이디 이름 주소 전화번호에 null값인경우 "등록을 해주세요" 작성해보기 
					
					
				}//while 
	}

}
